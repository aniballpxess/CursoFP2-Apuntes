<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- ðŸ”¹ TÃ­tulo -->
    <TextView
        android:id="@+id/txtTituloProductos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GestiÃ³n de Productos"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ðŸ”¹ RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProductos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/txtTituloProductos"
        app:layout_constraintBottom_toTopOf="@id/imgAgregarProducto"/>

    <!-- ðŸ”¹ BotÃ³n Filtrar -->
    <ImageButton
        android:id="@+id/imgFiltrarProducto"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_button"
        android:tint="@android:color/white"
        android:scaleType="fitCenter"
        android:padding="12dp"
        android:src="@drawable/ic_filter"
        android:contentDescription="Filtrar Productos"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- ðŸ”¹ BotÃ³n Agregar -->
    <ImageButton
        android:id="@+id/imgAgregarProducto"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_button"
        android:tint="@android:color/white"
        android:scaleType="fitCenter"
        android:padding="12dp"
        android:src="@drawable/ic_add"
        android:contentDescription="Agregar Producto"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
