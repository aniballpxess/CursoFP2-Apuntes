{
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "printWidth": 9999,
    "bracketSameLine": true,
    "arrowParens": "avoid",
    "overrides": [
        {
            "files": ["*.html", "*.css", "*.json", "*.xml", "*.xsl", "*.xslt"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
